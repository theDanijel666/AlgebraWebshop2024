@model IEnumerable<AlgebraWebshop2024.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Images for @ViewBag.product.Title</h1>

<p>
    <a asp-action="Create" asp-route-productId="@ViewBag.product.Id">Create New</a>
</p>
<p>
    <a asp-action="Index" asp-controller="Products">Back to products</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.ImageUrl) *@
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Is main image
                @* @Html.DisplayNameFor(model => model.MainImage) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img width="150" src="@item.ImageUrl" alt="@item.Name" />
                @* @Html.DisplayFor(modelItem => item.ImageUrl) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainImage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
