@model AlgebraWebshop2024.Models.Product

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <h4>@Model.Title</h4>
    <div class="row">
        <div class="col-md-7">
            
            @if(Model.ProductImages.Count>0){
                <style>
                  .carousel-item {
                      height: 50vh;
                  }

                      .carousel-item img {
                          width: 100%;
                          height: 100%;
                          object-fit: contain;
                      }
                </style>
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        @for(int i=1;i<Model.ProductImages.Count; i++)
                        {
                             <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" aria-label="Slide @i"></button>
                        }
                    </div>
                    <div class="carousel-inner">
                        @{
                            bool isFirst = true;
                        }
                        @foreach (var image in Model.ProductImages)
                        {
                            <div class="carousel-item @(isFirst ? "active" : "")">
                                <img src="@image.ImageUrl" class="d-block" alt="@image.Name">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@image.Name</h5>
                                    <p>@image.Description</p>
                                </div>
                            </div>
                            isFirst = false;
                        }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                </div>
            }
            else
            {
                <img class="card-img" src="/Images/no-image.png" alt="no image" />
            }
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title"> @Model.Title</h3>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Unit of measure: </td>
                                <td>@Model.Unit</td>
                            </tr>
                            <tr>
                                <td>Base price: </td>
                                <td>@Model.Price.ToString("C") </td>
                            </tr>
                            <tr>
                                <td>Discount: </td>
                                <td>@Model.Discount %</td>
                            </tr>
                            <tr>
                                <td>VAT: </td>
                                <td>@Model.VAT %</td>
                            </tr>
                            <tr>
                                <td><h3>Total price:</h3></td>
                                <td><h3>@Model.TotalPrice().ToString("C") </h3></td>
                            </tr>
                            <tr></tr>
                            <tr></tr>
                            <tr>
                                @if (Model.Quantity > 0)
                                {
                                    <td>
                                        Available:  @Model.Quantity
                                    </td>
                                    <td>
                                    <form method="post" asp-controller="Cart" asp-action="AddToCart">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="number" name="quantity" value="1" style="width:105px"/>
                                        <input type="submit" class="btn btn-success" value="Add to cart" />
                                    </form>
                                    </td>
                                }
                                else
                                {
                                   <td colspan="2">
                                        <button class="btn btn-danger" disabled>Out of stock</button>
                                   </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <br />
            <h5>Categories:</h5>
            <p>
                @foreach(var cat in Model.ProductCategories)
                {
                    <a asp-controller="Home" asp-action="Product" asp-route-categoryId="@cat.CategoryId" class="btn btn-warning">@cat.CategoryTitle</a>
                }
            </p>
            <div>
               
            </div>
            
        </div>
    </div>
    <hr />
    <div class="row">
        <h3>
            Description:
        </h3>
        <p>
            @Model.Description
        </p>
    </div>
</div>
